# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Debug
GET        /refreshSiteName            com.tsukaby.c_antenna.controller.DebugController.refreshSiteName

# Site
GET        /api/sites                  com.tsukaby.c_antenna.controller.SiteController.showAll(condition: com.tsukaby.c_antenna.entity.SimpleSearchCondition)

# Article
GET        /api/lately_articles        com.tsukaby.c_antenna.controller.ArticleController.lately(condition: com.tsukaby.c_antenna.entity.SimpleSearchCondition)

GET        /latest                     controllers.Assets.at(path="/public", file="index.html")

# Map static resources from the /public folder to the /assets URL path
GET        /                           controllers.Assets.at(path="/public", file="index.html")
GET        /*file                      controllers.Assets.at(path="/public", file)
